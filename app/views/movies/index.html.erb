<div id="logo"><h1>Movie_Review</h1></div>
<nav>
<ul>
	<li><% link_to("Add Movies",new_movie_path) %></li>
</ul>
</nav>
<table>
	<tr><th>Movie Name</th><th>Options</th></tr>
	<% @movies.each do |m| %>
		<tr>
      <td><%= m.name %></td>
      <td>
        <%= link_to( "View" , movie_path(m.id) ) %>
        <%= link_to( "Delete" , movie_path(m.id) , :method => :delete , :confirm => "Do you like to delete from the database?") %>
        
      </td>
    </tr>
  <% end %>
<%= link_to("Add Movies",new_movie_path)%>